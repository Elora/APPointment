<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/landappointment_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reg_userEPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_name" />

        <EditText
            android:id="@+id/reg_user_fieldEPA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_name"
            android:inputType="text" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_phoneEPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_phone" />

        <EditText
            android:id="@+id/reg_phone_fieldEPA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_phone"
            android:inputType="phone" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_mailEPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_mail" />

        <EditText
            android:id="@+id/reg_mail_fieldEPA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_mail"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_pass1EPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_pass1" />

        <EditText
            android:id="@+id/reg_pass1_fieldEPA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_pass1"
            android:inputType="textPassword" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_pass2EPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_pass2" />

        <EditText
            android:id="@+id/reg_pass2_fieldEPA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_pass1"
            android:inputType="textPassword" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/addImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:onClick="onClickaddImg"
            android:text="add imgage"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/reg_btnCancelEPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:onClick="onClickBtnCancel"
                android:text="@string/btn_cancel"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reg_btnSubmitEPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClickBtnSubmit"
                android:text="@string/btn_submit"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>