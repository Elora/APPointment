<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_weight="0.5"
        android:background="@drawable/landappointment_bg">

        <TextView
            android:id="@+id/reg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_username" />

        <EditText
            android:id="@+id/reg_user_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_username" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_phone" />

        <EditText
            android:id="@+id/reg_phone_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_phone"
            android:inputType="phone" />

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_mail" />

        <EditText
            android:id="@+id/reg_mail_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_mail"
            android:inputType="textEmailAddress" />




       

    </LinearLayout>
	 <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical" 
	        android:layout_weight="0.5">
	
	             <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_pass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_pass1" />

        <EditText
            android:id="@+id/reg_pass1_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_pass1"
            android:inputType="textPassword" />
	     	
	        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/reg_pass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_pass2" />

        <EditText
            android:id="@+id/reg_pass2_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_pass1"
            android:inputType="textPassword" />
	     
	     	
	      <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />
	     
	     
	             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/reg_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:onClick="onClickBtnCancel"
                android:text="@string/btn_cancel"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/reg_btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="onClickBtnSubmit"
                android:text="@string/btn_submit"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        
	</LinearLayout>
	    
    
</LinearLayout>
    