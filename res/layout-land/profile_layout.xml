<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:background="@drawable/appointment_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImagePL"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ProfielPic"
            android:src="@drawable/profilpic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/UserNamePL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/userName"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/UserEmailPL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/userEmail"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/UserPhonePL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/userPhone"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_big"
                android:onClick="onClickEditProfiel" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:background="@drawable/appointment_bg"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/First2Appointments"
            android:name="kb50.appointment.ProfielListFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appointment_bg" />
    </LinearLayout>

</LinearLayout>