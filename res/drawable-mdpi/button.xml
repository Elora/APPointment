<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#409e3f" />
      <stroke
          android:width="1dp"
          android:color="#358535" />
      <corners
          android:radius="4dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid       
          android:color="#59ba58"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#48b047" />
      <corners
          android:radius="4dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>